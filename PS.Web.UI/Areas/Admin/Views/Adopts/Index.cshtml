@model IEnumerable<PS.Entity.Adopt>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Categories</title>
</head>
<body>
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <head>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.AnimalName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AnimalDescription)
                </th>
                <th>
                    ☑ Male / ▢ Female
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserId)
                </th>
                <th></th>
            </tr>
        </head>
        <body>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.AnimalName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AnimalDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gender)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserId)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.AdoptId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.AdoptId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.AdoptId">Delete</a>
                    </td>
                </tr>
            }
        </body>
    </table>
</body>
</html>
