<style>




    input[type=text], select, textarea {
        width: 100%;
        padding: 12px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
        margin-top: 6px;
        margin-bottom: 16px;
        resize: vertical;
    }

    input[type=submit] {
        background-color: #04AA6D;
        color: white;
        padding: 12px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        input[type=submit]:hover {
            background-color: #FF7F00;
        }

    .container1 {
        border-radius: 5px;
        background-color: #f2f2f2;
        padding: 20px;
    }
</style>

<body>

    <h3> Sahiplendirme İsteği Oluşturma Formu</h3>

    <div class="container1">
        <form id="adopt" asp-controller="Adopt" asp-action="SendRequest" method="post">

            <label for="name">Animal Name</label>
            <input name="AnimalName" type="text" id="AnimalName" placeholder="Animal Name">


            <label for="description">Animal Description</label>
            <input name="AnimalDescription" type="text" id="AnimalDescription" placeholder="Animal Description">

  

            <label for="amac">Gender</label>
            <select id="amac" name="amac">
                <option value="1">Male</option>
                <option value="2">Female</option>
            </select>

           

            <input type="submit" id="form-submit" value="Submit">

        </form>
    </div>

</body>