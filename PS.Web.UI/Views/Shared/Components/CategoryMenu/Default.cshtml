@model List<Category>

    <style>
    ul.nav {
        margin: 0;
        padding: 0;
        list-style: none;
        height: 24px;
        line-height: 36px;
        background: #FFA500; /* you can change the backgorund color here. */
        font-family: Arial, Helvetica, sans-serif;
        font-size: 40px;
    }

        ul.nav li {
            border-right: 0px solid #189b80; /* you can change the border color matching to your background color */
            float: left;
        }

        ul.nav a {
            display: block;
            padding: 0 40px;
            color: #ccece6;
            text-decoration: none;
        }

            ul.nav a:hover,
            ul.nav li.current a {
                background: #086754;
            }


    </style>

<ul class="nav">
    @foreach (var categori in Model)
    {
        <li class="list-inline-item">
            <a asp-action="Kategoriler" asp-controller="Market" asp-route-id="@categori.CategoryId" class="btn btn-outline-secondary btn-sm">@categori.CategoryName</a>
        </li>


    }
    
</ul>